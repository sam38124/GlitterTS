{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2017",
    "module": "es2020",
    "declaration": false,
    "sourceMap": false,
    "outDir": "./src",
    "rootDir": "./src",
    "removeComments": true,
    "strict": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "ts-node": { "files": true }
}

