{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2017",
    "module": "es6",
    "declaration": false,
    "sourceMap": false,
    "outDir": "",
    "rootDir": "",
    "removeComments": true,
    "strict": true,
    "baseUrl": ".",
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["lib"],
  "exclude": ["node_modules","src/assets/vendor"],
  "ts-node": { "files": true }
}

