{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2017",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./src",
    "rootDir": "./src",
    "removeComments": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      },
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      }
    ],
    "paths": {},
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "node_modules/openai",
    "dist",
    "lib",
    "frontEnd",
    "*.d.ts"
  ],
  "ts-node": {
    "files": true
  }
}