{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2017",
    "module": "es6",
    "declaration": false,
    "sourceMap": false,
    "outDir": "./src",
    "rootDir": "./src",
    "removeComments": true,
    "strict": true,
    "baseUrl": "../lib",
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ],
    "paths": {
      "@base/*": ["src/*"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "ts-node": { "files": true }
}

